# Environment Configuration Template for Production
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://legnext_user:your_secure_password_here@localhost:5432/legnext_db"
DIRECT_URL="postgresql://legnext_user:your_secure_password_here@localhost:5432/legnext_db"

# NextAuth Configuration
NEXTAUTH_URL="https://legnext.ai"
NEXTAUTH_SECRET="your-super-secret-nextauth-key-min-32-chars"

# OAuth Providers (at least one required for authentication)
GOOGLE_ID="your-google-oauth-client-id"
GOOGLE_SECRET="your-google-oauth-client-secret"

# GitHub OAuth (backup login method)
GITHUB_ID="your-github-oauth-app-id"
GITHUB_SECRET="your-github-oauth-app-secret"

# Payment Gateway Configuration
# Choose either "stripe" or "square"
PAYMENT_GATEWAY="stripe"

# Stripe Configuration (if using Stripe)
STRIPE_PUBLIC_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_FREE_PRICE_ID="price_..."
STRIPE_PRO_PRICE_ID="price_..."

# Square Configuration (if using Square)
SQUARE_APPLICATION_ID="your-square-app-id"
SQUARE_ACCESS_TOKEN="your-square-access-token"
SQUARE_WEBHOOK_SIGNATURE_KEY="your-square-webhook-signature-key"
SQUARE_ENVIRONMENT="production"
SQUARE_LOCATION_ID="your-square-location-id"
SQUARE_SUPPORT_EMAIL="support@legnext.ai"
SQUARE_WEBHOOK_NOTIFICATION_URL="https://legnext.ai/api/webhooks/square"

# Email Configuration (Resend)
RESEND_API_KEY="re_..."

# Sentry Configuration (optional, for error tracking)
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="legnext-frontend"
SENTRY_RELEASE=""

# Application Configuration
NODE_ENV="production"
SITE_URL="https://legnext.ai"

# Optional: Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Optional: Discord webhook for notifications
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."

# Optional: 飞书/Lark webhook for notifications  
FEISHU_WEBHOOK_URL="https://open.feishu.cn/open-apis/bot/v2/hook/..."

# Optional: Slack webhook for notifications (deprecated, use FEISHU_WEBHOOK_URL instead)
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."

# Domain and URL Configuration
DOMAIN_NAME="legnext.ai"
APP_URL="https://legnext.ai"

# Security
SKIP_ENV_VALIDATION="false"